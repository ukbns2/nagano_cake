<div class ="container">
  <h2 class ="mt-3">管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :メールアドレス, class: "col-lg-3 col-form-label offset-lg-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード,class: "col-lg-3 col-form-label offset-lg-2" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary offset-lg-5" %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>

</div>
