
<div>
  <div>
    <h2>会員一覧</h2>
  </div>

  <div>

    <table class ="table table-hover table-inverse">
       <therd>
        <tr>
         <th>会員ID</th>
         <th>氏名</th>
         <th>メールアドレス</th>
         <th>ステータス</th>
        </tr>
       </therd>
       <tbody>
        <% @customers.each do |customer| %>
         <tr>
          <th><%= customer.id %></th>
          <th>
            <%= link_to admin_customer_path(customer) do %>
             <%= customer.first_name %><%= customer.last_name %>
            <% end %>
          </th>
          <th><%= customer.email %></th>
          <th>  </th>
         </tr>
        <% end %>
       </tbody>
      </table>

      <%= paginate @customers %>

    </div>
  </div>