
<div>
  <h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>

  <div>
    <%= form_with model: @customer,url: admin_customer_path do |f|  %>
    <div>
      <div class = "form-group">
        <%= f.label :会員ID, '会員ID' %>
        <%= @customer.id %>
      </div>
      <div class ="form_group">
        <%= f.label :氏名 %>
        <%= f.text_field :first_name %>　<%= f.text_field :last_name %>
      </div>
      <div class ="form_group">
        <%= f.label :フリガナ %>
        <%= f.text_field :first_name_kana %>　<%= f.text_field :last_name_kana %>
      </div>
      <div class ="form_group">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postal_code %>
      </div>
      <div class ="form_group">
        <%= f.label :住所 %>
        <%= f.text_field :address, size: "50" %>
      </div>
      <div class ="form_group">
        <%= f.label :電話番号 %>
        <%= f.text_field :telephone_number %>
      </div>
      <div class ="form_group">
        <%= f.label :メールアドレス %>
        <%= f.text_field :email %>
      </div>
      <div class ="form_group">
        <%= f.label :会員ステータス %>

      </div>

      <%= f.submit "変更を保存", class: 'btn btn-success' %>


    </div>
    <% end %>
  </div>

</div>