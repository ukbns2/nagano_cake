
<div class ="container">
  <h2 class ="mt-3"><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>

  <div class ="mt-4">
    <%= form_with model: @customer,url: admin_customer_path do |f|  %>
    <div>
      <div class = "form-group">
        <%= f.label :会員ID, '会員ID', class: "col-lg-2 col-form-label" %>
        <%= @customer.id %>
      </div>
      <div class ="form_group">
        <%= f.label :氏名, class: "col-lg-2 col-form-label" %>
        <%= f.text_field :first_name %>　<%= f.text_field :last_name %>
      </div>
      <div class ="form_group">
        <%= f.label :フリガナ, class: "col-lg-2 col-form-label" %>
        <%= f.text_field :first_name_kana %>　<%= f.text_field :last_name_kana %>
      </div>
      <div class ="form_group">
        <%= f.label :郵便番号, class: "col-lg-2 col-form-label" %>
        <%= f.text_field :postal_code %>
      </div>
      <div class ="form_group">
        <%= f.label :住所, class: "col-lg-2 col-form-label" %>
        <%= f.text_field :address, size: "50" %>
      </div>
      <div class ="form_group">
        <%= f.label :電話番号, class: "col-lg-2 col-form-label" %>
        <%= f.text_field :telephone_number %>
      </div>
      <div class ="form_group">
        <%= f.label :メールアドレス, class: "col-lg-2 col-form-label" %>
        <%= f.text_field :email %>
      </div>
      <div class ="form_group">
        <%= f.label :会員ステータス, class: "col-lg-2 col-form-label" %>
        <%= f.radio_button :is_deleted, 0, checked: "checked" %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, 1 %>
        <%= f.label :is_deleted, "無効" %>
      </div>

    </div>

      <%= f.submit "変更を保存", class: 'btn btn-success offset-lg-2 mt-2' %>


    </div>
    <% end %>
  </div>

</div>