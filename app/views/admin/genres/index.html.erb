<div>
  <div>
    <h2>ジャンル一覧・追加</h2>

    <%= form_with model: @genre, url: admin_genres_path do |f| %>
     <h4>ジャンル名</h4>
      <%= f.text_field :name %>
     <%= f.submit '新規登録' %>
    <% end %>


    <table class = "table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
          <th colspan ="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

