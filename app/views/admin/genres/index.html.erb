<div class ="container">

    <h2 class ="mt-3">ジャンル一覧・追加</h2>

  <div class ="mt-3">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class ="form-group form-inline">
      <%= f.label :name, "ジャンル名", class: "col-lg-2 col-form-label" %>
      <%= f.text_field :name, class: "form-control col-lg-3" %>
      <%= f.submit '新規登録', class: "btn btn-success offset-lg-1" %>
    </div>
    <% end %>
  </div>

  <div class ="mt-5">
   <div class ="col-lg-5">
    <table class = "table table-inverse">
      <thead class ="thead-light">
        <tr>
          <th>　　ジャンル</th>
          <th colspan ="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
   </div>
  </div>
</div>

