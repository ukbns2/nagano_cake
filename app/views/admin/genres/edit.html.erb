
<div class ="container">
  <div>
    <h2 class ="mt-3">ジャンル編集</h2>

    <div class ="mt-5">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id),method: :patch do |f| %>
       <div class ="form-group form-inline">
         <%= f.label :name, "ジャンル名", class: "col-lg-2 col-form-label" %>
         <%= f.text_field :name, class: "col-lg-3" %>
         <%= f.submit '変更を保存', class: "btn btn-success offset-lg-1" %>
       </div>
      <% end %>
    </div>

  </div>
</div>