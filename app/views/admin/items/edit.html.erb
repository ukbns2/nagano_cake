
<div class ="container">
  <h2 class ="mt-3">商品編集</h2>
   <div>

    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
     <div class ="form-group">
      <%= f.label :image, "商品画像", class: "col-lg-2 col-form-label offset-lg-2" %>
      <%= f.file_field :image, accept: "image/*" %>
     </div>
     <div class ="form-group">
      <%= f.label :name, "商品名", class: "col-lg-2 col-form-label offset-lg-2" %>
      <%= f.text_field :name %>
     </div>
     <div class ="form-group">
      <%= f.label :introduction, "商品説明", class: "col-lg-2 col-form-label offset-lg-2" %>
      <%= f.text_area :introduction, rows: 6 %>
     </div>
     <div class ="form-group">
      <%= f.label :genre_id, "ジャンル", class: "col-lg-2 col-form-label offset-lg-2" %>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
     </div>
     <div class ="form-group">
      <%= f.label :price, "税抜価格", class: "col-lg-2 col-form-label offset-lg-2" %>
      <%= f.text_field :price %>円
     </div>
     <%= f.submit '変更を保存', class: "btn btn-success offset-lg-5" %>

    <% end %>

   </div>

</div>