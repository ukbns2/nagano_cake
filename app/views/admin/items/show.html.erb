<div class = "container">
 <h2>商品詳細</h2>
 <div class ="row" >

  <div class ="col-lg-5">
   <% if @item.image.attached? %>
     <%= image_tag @item.image, size: "300x300" %>
   <% else %>
     <%= image_tag 'no_image', size: "300x300" %>
   <% end %>
  </div>


  <div class ="col-lg-7">
    <table class ="table table-borderless">
      <tr>
       <th>商品名</th>
       <th><%= @item.name %></th>
      </tr>
      <tr>
       <th>商品説明</th>
       <th><%= @item.introduction %></th>
      </tr>
      <tr>
       <th>ジャンル</th>
       <th><%= @item.genre.name %></th>
      </tr>
      <tr>
       <th>税抜価格</th>
       <th><%= @item.price %>円</th>
      </tr>
      <tr>
       <th> </th>
       <th></th>
      </tr>
    </table>
    <div><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %></div>
   </div>
 </div>
</div>
