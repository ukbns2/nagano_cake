<div class = "container">
 <h2 class ="mt-3">商品詳細</h2>
 <div class ="row" >

  <div class ="col-lg-5 mt-5">
   <% if @item.image.attached? %>
     <%= image_tag @item.image, size: "300x300" %>
   <% else %>
     <%= image_tag 'no_image', size: "300x300" %>
   <% end %>
  </div>


  <div class ="col-lg-7 mt-5">
    <table class ="table table-borderless">
      <tr>
       <th class ="col-lg-3">商品名</th>
       <th><%= @item.name %></th>
      </tr>
      <tr>
       <th class ="col-lg-3">商品説明</th>
       <th><%= @item.introduction %></th>
      </tr>
      <tr>
       <th class ="col-lg-3">ジャンル</th>
       <th><%= @item.genre.name %></th>
      </tr>
      <tr>
       <th class ="col-lg-3">税込価格<br>(税抜価格)</th>
       <th><%= @item.with_tax_price %>（<%= @item.price %>）円</th>
      </tr>
    </table>
    <div><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success offset-lg-2" %></div>
   </div>
 </div>
</div>
