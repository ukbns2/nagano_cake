
<div class ="container">
  <div>
   <div class ="row">
    <h2 class ="col-lg-4 mt-3">商品一覧</h2>

    <div class ="offset-lg-6 mt-3">
     <%= link_to new_admin_item_path do %>
      <button type ="button" class ="btn btn-light rounded-circle">＋</button>
     <% end %>
    </div>
   </div>

   <div class ="mt-3">
    <table class ="table table-hover table-borderless">
     <therd>
      <tr class ='table-active'>
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜価格</th>
       <th>ジャンル</th>
      </tr>
     </therd>
     <tbody>
      <% @items.each do |item| %>
       <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div>

   <div class ="row justify-content-center">
    <%= paginate @items %>
   </div>

  </div>
</div>