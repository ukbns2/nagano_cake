
<div class ="container">
  <h3 class ="mt-3">配送先登録/一覧</h3>

  <%= form_with model: @address, url: '/addresses', method: :post do |f|  %>
   <div class ="form-group">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-lg-3 col-form-label" %>
    <%= f.text_field :postal_code %>
   </div>
   <div class ="form-group">
    <%= f.label :address, "住所", class: "col-lg-3 col-form-label" %>
    <%= f.text_field :address, size: "50" %>
   </div>
   <div class ="form-group">
    <%= f.label :name, "宛名", class: "col-lg-3 col-form-label" %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: "btn btn-success offset-lg-4" %>
   </div>
  <% end %>

  <div class ="col-lg-9 mt-5">
   <table class ="table table-bordered">
    <thead class="thead-light">
     <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th>　　</th>
     </tr>
    </thead>
    <tbody>
     <% @addresses.each do |address| %>
      <tr>
       <th><%= address.postal_code %></th>
       <th><%= address.address %></th>
       <th><%= address.name %></th>
       <th><%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-sm btn-success' %> <%= link_to "削除する", address_path(address.id), method: :delete, class: 'btn btn-sm btn-danger', "data-confirm" => "本当に削除しますか？" %></th>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>



</div>