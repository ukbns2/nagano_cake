
<div>
  <h2>配送先登録/一覧</h2>

  <%= form_with model: @address, url: '/addresses', method: :post do |f|  %>
   <h4>郵便番号(ハイフンなし)</h4>
    <%= f.text_field :postal_code %>
   <h4>住所</h4>
    <%= f.text_field :address, size: "50" %>
   <h4>宛名</h4>
    <%= f.text_field :name %>
   <%= f.submit '新規登録', class: "btn btn-success" %>
  <% end %>


  <table class ="table table-hover table-inverse">
   <therd>
    <tr>
     <th>郵便番号</th>
     <th>住所</th>
     <th>宛名</th>
     <th>　　</th>
    </tr>
   </therd>
   <tbody>
    <% @addresses.each do |address| %>
     <tr>
      <th><%= address.postal_code %></th>
      <th><%= address.address %></th>
      <th><%= address.name %></th>
      <th><%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-sm btn-success' %> <%= link_to "削除する", address_path(address.id), method: :delete, class: 'btn btn-sm btn-danger', "data-confirm" => "本当に削除しますか？" %></th>
     </tr>
    <% end %>
   </tbody>
  </table>



</div>