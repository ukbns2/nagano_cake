
<div class ="container">
  <h2>配送先編集</h2>

  <%= form_with model: @address do |f|  %>
   <div class ="form-group">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-lg-3 col-form-label" %>
    <%= f.text_field :postal_code %>
   </div>
   <div class ="form-group">
    <%= f.label :address, "住所", class: "col-lg-3 col-form-label" %>
    <%= f.text_field :address, size: "50" %>
   </div>
   <div class ="form-group">
    <%= f.label :name, "宛名", class: "col-lg-3 col-form-label" %>
    <%= f.text_field :name %>
    <%= f.submit '変更内容を保存', class: "btn btn-success offset-lg-3" %>
   </div>
  <% end %>


</div>