<h1>Public::Addresses#edit</h1>
<p>Find me in app/views/public/addresses/edit.html.erb</p>

<div>
  <h2>配送先編集</h2>

  <%= form_with model: @address, url: update_address_path(@address.id), method: :patch do |f|  %>
   <h4>郵便番号(ハイフンなし)</h4>
    <%= f.text_field :postal_code %>
   <h4>住所</h4>
    <%= f.text_field :address %>
   <h4>宛名</h4>
    <%= f.text_field :name %>
   <%= f.submit '変更を保存する', class: "btn btn-success" %>
  <% end %>


</div>