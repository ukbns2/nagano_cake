<div class ="container">
  <div class ="row">
    <div class ="col-lg-2 mt-3">
      <%= render 'genre_list', genres: @genres %>
    </div>


    <div>
      <div class ="col-lg-3 mt-3 offset-lg-1">
        <%= image_tag @item.image, size: "250x250" %>
      </div>
    </div>
      <div class ="col-lg-5 mt-5 offset-lg-1">
        <h2><%= @item.name %></h2>
        <p><%= @item.introduction %></p><br>
        <h4>¥<%= @item.with_tax_price %><span>(税込)</span></h4><br>
        <%= form_with model: @cart_item, url: cart_items_path(@cart_item), method: :post do |f| %>
         <%= f.hidden_field :item_id, :value => @item.id %>
         <%= f.select :amount, *[1..10] %>
         <%= f.submit "カートに入れる", class: 'btn btn-success offset-lg-3' %>
        <% end %>
      </div>
  </div>
</div>