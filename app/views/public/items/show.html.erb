
<div class ="row">
  <div class ="col-lg-3">
    <%= render 'genre_list', genres: @genres %>
  </div>


  <div>
    <div>
      <%= image_tag @item.image, size: "200x200" %>
    </div>
  </div>

  <div>
    <div>
      <h2><%= @item.name %></h2>
      <p><%= @item.introduction %></p>
      <h4>¥<%= (@item.price * 1.1).to_i %><span>(税込)</span></h4>
    </div>
  </div>
</div>