
<div class ="row">
  <div class ="col-lg-3">
    <%= render 'genre_list', genres: @genres %>
  </div>


  <div>
    <div>
      <%= image_tag @item.image, size: "200x200" %>
    </div>
  </div>
  <div>
    <div>
      <h2><%= @item.name %></h2>
      <p><%= @item.introduction %></p>
      <h4>¥<%= @item.with_tax_price %><span>(税込)</span></h4>
      <%= form_with model: @cart_item, url: cart_items_path(@cart_item), method: :post do |f| %>
       <%= f.hidden_field :item_id, :value => @item_id %>
       <%= f.select :amount, *[1..10] %>
       <%= f.submit "カートに入れる", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>