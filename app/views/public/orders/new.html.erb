<h1>Public::Orders#new</h1>
<p>Find me in app/views/public/orders/new.html.erb</p>

<div>
  <h2>注文情報入力</h2>

  <%= form_with model: @order do |f| %>
  <div>
    <h4><strong>支払い方法</strong></h4>
     <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
     <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

     <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
     <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

    <h4><strong>お届け先</strong></h4>
     <%= f.radio_button :address, 1 %>
     <%= f.label :address, "ご自身の住所" %>
      <div><%= current_customer.postal_code %> <%= current_customer.address %><br><%= current_customer.first_name %><%= current_customer.last_name %><br></div>

     <%= f.radio_button :address, 2 %>
     <%= f.label :address, "登録済住所から選択" %>
      <div><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></div>

     <%= f.radio_button :address, 3 %>
     <%= f.label :address, "新しいお届け先" %>
      <div class ="field">
        <%= f.label :postal_code, "郵便番号(ハイフン)なし" %><br>
        <%= f.text_field :postal_code, class: "form_control" %>
      </div>
      <div class ="field">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, size: "50", class: "form_control" %>
      </div>
      <div class ="field">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name, class: "form_control" %>
      </div>

    <div class = "actions" >
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>

</div>