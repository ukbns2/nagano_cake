
<div>
  <h2>注文履歴詳細</h2>

  <div>
    <div>
      <p><strong>注文情報</strong></p>
      <table class ="table table-bordered">
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td> </td>
        </tr>
      </table>
    </div>

    <div>
      <p><strong>注文内容</strong></p>
      <table class ="table table-bordered">
        <thead class ="thead-light">
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
           <tr>
             <td><%= order_item.item.name %></td>
             <td><%= order_item.item.with_tax_price %></td>
             <td><%= order_item.amount %></td>
             <td><%= order_item.price %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div>
      <p><strong>請求情報</strong></p>
      <table class ="table table-bordered">
        <tr>
          <td>商品合計</td>
          <td><%= @total %></td>
        </tr>
        <tr>
          <td>配送料</td>
          <td><%= @order.shopping_cost %></td>
        </tr>
        <tr>
          <td>ご請求額</td>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>

</div>