
<div>
  <h2>会員情報編集</h2>

   <%= form_with model: @customer, url: customers_information_path(@customer.id) do |f| %>
   <table>
     <tr>
      <th>氏名</th>
      <th><%= f.text_field :first_name %><%= f.text_field :last_name %></th>
     </tr>

     <tr>
      <th>フリガナ</th>
      <th><%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %></th>
     </tr>

   　<tr>
      <th>郵便番号</th>
      <th><%= f.text_field :postal_code %></th>
     </tr>

     <tr>
      <th>住所</th>
      <th><%= f.text_field :address %></th>
     </tr>

     <tr>
      <th>電話番号</th>
      <th><%= f.text_field :telephone_number %></th>
     </tr>

     <tr>
      <th>メールアドレス</th>
      <th><%= f.email_field :email %></th>
     </tr>

   </table>

   <div class="actions">
     <%= f.submit "編集内容を保存", class: "btn btn-success" %>
   </div>

   <%= link_to "退会する", customers_detain_path, method: :get, class: "btn btn-danger" %>


  <% end %>

</div>
