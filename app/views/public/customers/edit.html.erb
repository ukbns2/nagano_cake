
<div class ="container">
  <h2>会員情報編集</h2>

  <div class ="row">
   <div class ="col-md-10">
    <%= form_with model: @customer, url: customers_information_path(@customer.id) do |f| %>
    <table>
      <tr>
       <td>氏名</td>
       <td><%= f.text_field :first_name %><%= f.text_field :last_name %></td>
      </tr>

      <tr>
       <td>フリガナ</td>
       <td><%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %></td>
      </tr>

    　<tr>
       <td>郵便番号</td>
       <td><%= f.text_field :postal_code %></td>
      </tr>

      <tr>
       <td>住所</td>
       <td><%= f.text_field :address, size: "50" %></td>
      </tr>

      <tr>
       <td>電話番号</td>
       <td><%= f.text_field :telephone_number %></td>
      </tr>

      <tr>
       <td>メールアドレス</td>
       <td><%= f.email_field :email %></td>
      </tr>

    </table>
   </div>
  </div>

   <div class="actions">
     <%= f.submit "編集内容を保存", class: "btn btn-success" %>
   </div>

   <%= link_to "退会する", customers_detain_path, method: :get, class: "btn btn-danger" %>


  <% end %>

</div>
