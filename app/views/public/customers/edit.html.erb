
<div class ="container">
  <h2 class ="mt-3">会員情報編集</h2>

  <div class ="row mt-4">
   <div class ="col-lg-9">
    <%= form_with model: @customer, url: customers_information_path(@customer.id) do |f| %>

    <div class ="form-group">
      <%= f.label :first_name, "氏名", class: "col-lg-3 col-form-label" %>
      <%= f.text_field :first_name %>　　<%= f.text_field :last_name %>
    </div>

    <div class ="form-group">
      <%= f.label :first_name_kana, "フリガナ", class: "col-lg-3 col-form-label" %>
      <%= f.text_field :first_name_kana %>　　<%= f.text_field :last_name_kana %>
    </div>

    <div class ="form-group">
      <%= f.label :postal_code, "郵便番号", class: "col-lg-3 col-form-label" %>
      <%= f.text_field :postal_code %>
    </div>

    <div class ="form-group">
      <%= f.label :address, "住所", class: "col-lg-3 col-form-label" %>
      <%= f.text_field :address, size: "50" %>
    </div>

    <div class ="form-group">
      <%= f.label :telephone_number, "電話番号", class: "col-lg-3 col-form-label" %>
      <%= f.text_field :telephone_number %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "col-lg-3 col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
     <%= f.submit "編集内容を保存", class: "btn btn-success offset-lg-3" %>
     <%= link_to "退会する", customers_detain_path, method: :get, class: "btn btn-danger offset-lg-3" %>
   </div>

   </div>
  </div>

  <% end %>

</div>
