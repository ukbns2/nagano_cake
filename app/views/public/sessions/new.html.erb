<div class ="container">
 <div>
  <h2>ログイン</h2>

  <h4 class ="offset-lg-1">会員の方はこちらからログイン</h4>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div>
    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "col-lg-3 col-form-label offset-lg-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30" %>
    </div>
   </div>

   <div>
    <div class="form-group">
      <%= f.label :password, "パスワード", class: "col-lg-3 col-form-label offset-lg-2" %>
      <%= f.password_field :password, autocomplete: "current-password", size: "30" %>
    </div>
   </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary offset-lg-5" %>
    </div>
  <% end %>

 <div class="mt-5">
  <h4 class ="offset-lg-1">会員登録がお済みでない方</h4>
  <div class ="offset-lg-2">
   <h5><%= link_to "こちら", "/customers/sign_up" %>から新規登録を行ってください。</h5>
  </div>
 </div>
 </div>
</div>