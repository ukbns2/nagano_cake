<div class ="container">
  <h2 class ="mt-3">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


      <div class ="form-group">
        <%= f.label :first_name, "名前", class: "col-lg-2 col-form-label" %>
        <%= f.label :first_name, "(姓)", class: "col-lg-1 col-form-label" %>
        <%= f.text_field :first_name %>
        <%= f.label :last_name, "(名)", class: "col-lg-1 col-form-label text-right" %>
        <%= f.text_field :last_name %>
      </div>

      <div class ="form-group">
        <%= f.label :first_name_kana, "フリガナ", class: "col-lg-2 col-form-label" %>
        <%= f.label :first_name_kana, "(セイ)", class: "col-lg-1 col-form-label" %>
        <%= f.text_field :first_name_kana %>
        <%= f.label :last_name_kana, "(メイ)", class: "col-lg-1 col-form-label text-right" %>
        <%= f.text_field :last_name_kana %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: "col-lg-3 col-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class ="form-group">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-lg-3 col-form-label" %>
        <%= f.text_field :postal_code %>
      </div>

      <div class ="form-group">
        <%= f.label :address, "住所", class: "col-lg-3 col-form-label" %>
        <%= f.text_field :address, size: "50" %>
      </div>

      <div class ="form-group">
        <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-lg-3 col-form-label" %>
        <%= f.text_field :telephone_number %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード(6文字以上)", class: "col-lg-3 col-form-label" %>
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-lg-3 col-form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success offset-lg-3" %>
      </div>

  <% end %>

 <div class ="mt-5">
  <h2>既に登録済みの方</h2>
  <div class ="offset-lg-1">
    <h5><%= link_to "こちら", new_customer_session_path %>
    からログインしてください。</h5>
  </div>
 </div>

</div>